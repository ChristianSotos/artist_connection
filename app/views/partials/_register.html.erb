<div id='register-div'>
	<button class='close'>X</button>
	<span id='reg-to-log' class='popup-click' data-alt-src='/login_popup'>Already Have An Account? Login</span>
	<h1>Artist Information</h1>
	<%= form_for @user, :url => '/register', :html => {:multipart => true, :class => "no-file"} do |f| %>
		<div class='reg-row'>
			<div<% if flash[:errors]
					if flash[:errors][:first_name]%> 
						class='error'
					<% end 
				end %>><label for='user[first_name]'>First Name: </label>
			<%= f.text_field :first_name %></div>
			<div<% if flash[:errors]
					if flash[:errors][:last_name]%> 
						class='error'
					<% end 
				end %>><label for='user[last_name]'>Last Name: </label>
			<%= f.text_field :last_name %></div>
		</div>
		<div class='reg-row'>
			<div<% if flash[:errors]
					if flash[:errors][:phone_number]%> 
						id='phone-errors'
					<% end 
				end %>><label for='user[phone_number]'>Phone Number: </label>
				<input type='text' name='phone-1' id='phone-input1' maxlength="3">
				<input type='text' name='phone-2' id='phone-input2' maxlength="3">
				<input type='text' name='phone-3' id='phone-input3' maxlength="4">
				<input type='hidden' name='user[phone_number]' id='phone-number'></div>
			<div<% if flash[:errors]
					if flash[:errors][:email]%> 
						class='error'
					<% end 
				end %>><label for='user=[email]'>Email: 
			<%= f.text_field :email %></div>
		</div>
		<div class='reg-row'>
			<div<% if flash[:errors]
					if flash[:errors][:password]%> 
						class='error'
					<% end 
				end %>><label for='user[password]'>Password: 
			<%= f.password_field :password %></div>
			<div<% if flash[:errors]
					if flash[:errors][:confirm_password]%> 
						class='error'
					<% end 
				end %>><label for='user[password_confirmation]'>Confirm Password: </label>
			<%= f.password_field :password_confirmation %></div>
		</div>
		<div class='reg-artist-row'>
			<div<% if flash[:errors]
				if flash[:errors][:artist_name]%> 
					class='error'
				<% end 
			end %>><label for='user[artists_name]'>Artist Name: </label>
			<%= f.text_field :artist_name %></div>
			<div<% if flash[:errors]
					if flash[:errors][:description]%> 
						class='error'
					<% end 
				end %>><label for='user[description]'>Artist Description: </label>
			<%= f.text_area :description %></div>
		</div>
		<h3>Social Media Links</h3>
		<div class='reg-row'>
			<div<% if flash[:errors]
					if flash[:errors][:facebook]%> 
						class='error'
					<% end 
				end %>><%= f.label :facebook %>
			<%= f.text_field :facebook %></div>
			<div<% if flash[:errors]
					if flash[:errors][:twitter]%> 
						class='error'
					<% end 
				end %>><%= f.label :twitter %>
			<%= f.text_field :twitter %></div>
		</div>
		<div class='reg-row'>
			<div<% if flash[:errors]
					if flash[:errors][:instagram]%> 
						class='error'
					<% end 
				end %>><%= f.label :instagram %>
			<%= f.text_field :instagram %></div>
			<div<% if flash[:errors]
					if flash[:errors][:soundcloud]%> 
						class='error'
					<% end 
				end %>><%= f.label :soundcloud %>
			<%= f.text_field :soundcloud %></div>
		</div>
		<button>Register</button>
	<% end %>
</div>